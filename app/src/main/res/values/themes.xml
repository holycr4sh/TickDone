<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme using Material 3 -->
    <style name="Base.Theme.Todo" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryContainer">@color/primary_light</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryContainer">@color/secondary_light</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Error color -->
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/white</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/primary_dark</item>

        <!-- Other customizations -->
        <item name="android:windowBackground">@color/background</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/on_surface</item>
        <item name="colorOutline">@color/divider</item>

        <!-- Typography -->
        <item name="textAppearanceHeadline1">@style/TextAppearance.Todo.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.Todo.Headline2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.Todo.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.Todo.Body2</item>

        <!-- Button styles -->
        <item name="materialButtonStyle">@style/Widget.Todo.Button</item>

        <!-- Card styles -->
        <item name="materialCardViewStyle">@style/Widget.Todo.CardView</item>

        <!-- Checkbox Style -->
        <item name="checkboxStyle">@style/Widget.Todo.CheckBox</item>

        <!-- Switch Style -->
        <item name="switchStyle">@style/Widget.Todo.Switch</item>

        <!-- RadioButton Style -->
        <item name="radioButtonStyle">@style/Widget.Todo.RadioButton</item>

        <!-- EditText Style -->
        <item name="editTextStyle">@style/Widget.Todo.EditText</item>
    </style>

    <!-- The actual theme used by the app -->
    <style name="Theme.Todo" parent="Base.Theme.Todo" />

    <!-- Custom Spinner Style -->
    <style name="CustomSpinnerStyle" parent="Widget.Material3.TextView.FilledBox.SpinnerItem">
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:background">@drawable/spinner_background</item>
        <item name="android:popupBackground">@drawable/spinner_dropdown_background</item>
        <item name="android:textColor">@color/on_surface</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Typography styles -->
    <style name="TextAppearance.Todo.Headline1" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/on_surface</item>
    </style>

    <style name="TextAppearance.Todo.Headline2" parent="TextAppearance.Material3.TitleMedium">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/on_surface</item>
    </style>

    <style name="TextAppearance.Todo.Body1" parent="TextAppearance.Material3.BodyLarge">
        <item name="fontFamily">sans-serif</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/on_surface</item>
    </style>

    <style name="TextAppearance.Todo.Body2" parent="TextAppearance.Material3.BodyMedium">
        <item name="fontFamily">sans-serif</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/on_surface_medium</item>
    </style>

    <!-- Button Style -->
    <style name="Widget.Todo.Button" parent="Widget.Material3.Button">
        <item name="android:textAppearance">@style/TextAppearance.Todo.Button</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
    </style>

    <style name="TextAppearance.Todo.Button" parent="TextAppearance.Material3.LabelLarge">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <!-- Card Style -->
    <style name="Widget.Todo.CardView" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">2dp</item>
        <item name="contentPadding">0dp</item>
        <item name="cardBackgroundColor">@color/surface</item>
    </style>

    <!-- CheckBox Style -->
    <style name="Widget.Todo.CheckBox" parent="Widget.Material3.CompoundButton.CheckBox">
        <item name="buttonTint">@color/primary</item>
        <item name="android:textColor">@color/on_surface</item>
    </style>

    <!-- Switch Style -->
    <style name="Widget.Todo.Switch" parent="Widget.Material3.CompoundButton.MaterialSwitch">
        <item name="trackTint">@color/primary</item>
        <item name="thumbTint">@color/white</item>
    </style>

    <!-- RadioButton Style -->
    <style name="Widget.Todo.RadioButton" parent="Widget.Material3.CompoundButton.RadioButton">
        <item name="buttonTint">@color/primary</item>
        <item name="android:textColor">@color/on_surface</item>
    </style>

    <!-- EditText Style -->
    <style name="Widget.Todo.EditText" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/primary</item>
        <item name="hintTextColor">@color/primary</item>
    </style>
</resources>